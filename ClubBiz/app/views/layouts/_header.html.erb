<title>
  <%=full_title(yield(:title)) %>
</title>

<!-- Style from : http://railscasts.com/episodes/328-twitter-bootstrap-basics?view=asciicast -->

<head>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>



<div class="navbar navbar-fixed-top" style="background-color:#EEEEEE">
  <div class="navbar-inner">
    <div class="container">

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href=<%=root_path%>>ClubBiz | UniMelb</a>
      <div class="nav-collapse">
        <ul class="nav navbar-nav pull-center">
          <li><%= link_to 'Events', events_path %></li>
          <li><%= link_to 'Societies', societies_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to (current_user.firstName + " " +  current_user.lastName), edit_user_registration_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Log in', new_user_session_path %></li>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <% end %>
        </ul>
        <div class="pull-right" >
          <%= render 'layouts/searchBar' %>
        </div>
      </div>
    </div>
  </div>
</div>


