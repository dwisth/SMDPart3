<% provide(:title, 'Event - ' + @event.name) %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @event.location %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @event.date %>
  </p>

  <% if !@event.society.nil? %>
    <p>
      <strong>Society:</strong>
      <%= @event.society.name %>
    </p>
  <% end %>
  <p>
    <strong>Start Time:</strong>
    <%= @event.startTime %>
  </p>

  <p>
    <strong>End Time:</strong>
    <%= @event.endTime %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Members Only:</strong>
    <%= @event.membersOnly %>
  </p>

  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <% end %>
  <%= link_to 'Back', :back %>
</div>
