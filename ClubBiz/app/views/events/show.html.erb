<% provide(:title, 'Event - ' + @event.name) %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @event.location %>
  </p>
  
  <p>
    <strong>Society:</strong>
    <% @event.societies.each do|society| %>
      <li><%=society.name%></li>
    <%end%>
  </p>
  
  <p>
    <strong>Date:</strong>
    <%= @event.date %>
  </p>

  <p>
    <strong>Start Time:</strong>
    <%= @event.startTime %>
  </p>

  <p>
    <strong>End Time:</strong>
    <%= @event.endTime %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Members Only:</strong>
    <%= @event.membersOnly %>
  </p>

    <p>
    <strong>Tickets Available:</strong>
    <%= @event.ticketAmount %>
  </p>

  <% if user_signed_in? %>
    <%= form_tag(new_ticket_path,  method: "get") do %>
    <input id="event_id" name="event_id" type="hidden" value= <%= @event.id%> >
    <%= submit_tag("Buy Ticket")%>
    <% end %>
  <% end %>

  <%= render 'event_posts/index' %>



  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <% end %>
  <%= link_to 'Back', :back %>
</div>
